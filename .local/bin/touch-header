#!/bin/bash
# apt: uuid-runtime

set -eu

usage() {
  cat <<EOF >&2
USAGE: ${0##*/} [-c] [-h] [-x] FILE...
    initialize FILEs with include guard

    -c  force C mode
    -x  force C++ mode
    -h  print this help
EOF
  exit 1
}
set-guard() {
  guard=$(uuidgen -r | tr '[:lower:]-' '[:upper:]_')
  guard=INCLUDE_GUARD_$guard
}
set-comment() {
  case ${mode-} in
    c) comment="/* $guard */";;
    x) comment="// $guard";;
    *)
      if [[ ${header-} == *.h ]]; then
        comment="/* $guard */"
      else
        comment="// $guard"
      fi;;
  esac
}
generate() {
  local guard comment
  set-guard
  set-comment
  cat <<EOF
#ifndef $guard
#define $guard
#endif $comment
EOF
}
main() {
  local var mode header
  while getopts chx var; do
    case $var in
      c) mode=c;;
      h) usage;;
      x) mode=x;;
      \?) usage;;
    esac
  done
  shift $((OPTIND - 1))
  for header; do
    if [[ -s $header ]]; then
      touch "$header"
    else
      generate | tee "$header"
    fi
  done
  [[ -n ${header+set} ]] || generate
}

main "$@"
