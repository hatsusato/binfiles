#!/bin/bash

set -eu

host=${1%%:*}
src=${1#*:}
dst=${2:-$HOME/sshfs/$host}
if [[ $1 == "$host"?(:) ]]; then
  src=$(ssh -t "$host" 'echo -n "$HOME"' 2>/dev/null)
fi
mkdir -p "$dst"
params=reconnect
params+=,ServerAliveInterval=5
params+=,ServerAliveCountMax=3
/usr/bin/sshfs "$host:$src" "$dst" -o "$params"
